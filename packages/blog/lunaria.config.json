{
  "$schema": "../../node_modules/@lunariajs/core/config.schema.json",
  "repository": {
    "name": "stargazer8tw/blog",
    "rootDir": "packages/blog"
  },
  "files": [
    {
      "location": ".vitepress/config/{en,zh_Hant,zh_Hans}.ts",
      "pattern": ".vitepress/config/@lang.ts",
      "type": "universal"
    },
    {
      "location": "contents/**/*.md",
      "pattern": "@lang/@path",
      "type": "universal"
    }
  ],
  "defaultLocale": {
    "label": "English",
    "lang": "en"
  },
  "locales": [
    {
      "label": "繁體中文",
      "lang": "zh_Hant"
    },
    {
      "label": "简体中文",
      "lang": "zh_Hans"
    }
  ],
  "outDir": ".vitepress/dist/_translations",
  "ignoreKeywords": ["lunaria-ignore"]
}